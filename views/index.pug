doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    if user
      title #{user.username}
  body
    if user
      h1 WELCOME BACK #{user.username}
      hr
      h3 user object - #{user}
      h2 username - #{user.username}
      h2 first name - #{user.first_name}
      h2 family name - #{user.family_name}
      h2 user membership - #{user.hasMembership}
      hr
      p Create new message (link)
      input(type="text")
      if user.hasMembership
        p You are a member already!
      else
        p Join the club (link)
      hr
      a(href='/log-out') LOG OUT
    else
      h1 Please Log In
      form(action='/log-in', method='POST')
        label(for='username') Username
        input(name='username', placeholder='username', type='text')
        label(for='password') Password
        input(name='password', type='password')
        button Log In
      a(href='/sign-up') Sign up
